#include "holberton.h"
/**
 * print_diagonal-  prints a square, followed by a new line
 * @number:external input
 * Return:(0)
 */
void print_square(int size)
{
	int a, b;

	if (size > 0)
	{
		for (a = 0; a < size; a++)
		{
			for (b = 0; b < size; b++)
			{
				_putchar ('#');
			}
			_putchar (10);
		}
	}
	else
	{
		_putchar (10);
	}
}
